@model Supervise_.Models.sp_instructor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Edit My Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="hidden" class="form-control" /> @Model.Name
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div class="checkbox">
                <label> <input type="radio" asp-for="Gender" value="Male" />Male</label>
                </div>
                <div class="checkbox">
                <label> <input type="radio" asp-for="Gender" value="Female"  />Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone_Number" class="control-label"></label>
                <input asp-for="Phone_Number" class="form-control" />
                <span asp-validation-for="Phone_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group_Count" class="control-label"></label>
                <input asp-for="Group_Count" class="form-control" />
                <span asp-validation-for="Group_Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background" class="control-label"></label>
                <textarea asp-for="Background" class="form-control" rows="4">None</textarea>
                <span asp-validation-for="Background" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="interests" class="control-label"></label>
                <textarea asp-for="interests" class="form-control" rows="4">None </textarea>
                <span asp-validation-for="interests" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="rank" class="control-label"></label>
                <div class="checkbox">
                <label> <input type="radio" asp-for="rank" value="Doctor" />Doctor</label>
                </div>
                <div class="checkbox">
                <label> <input type="radio" asp-for="rank" value="Master"  />Master</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
