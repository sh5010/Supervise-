@model Supervise_.Models.sp_student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>sp_student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                          <label> Gender of student </label>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Gender" value="Female" /> Female</label>
                          </div>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Gender" value="Male"  />Male</label>
                          </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
                      </div>
           
            <div class="form-group">
                <label> Email of student </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Phone Number of student </label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                          <label> The student completes the 90 hours </label>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Completed_hrs" value="yes" /> Yes</label>
                          </div>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Completed_hrs" value="no"  />No</label>
                          </div>
                <span asp-validation-for="Completed_hrs" class="text-danger"></span>
                      </div>
            
            <div class="form-group">
                <label> GPA of student </label>
                <input asp-for="GPA" class="form-control" />
                <span asp-validation-for="GPA" class="text-danger"></span>
            </div>
         

            <div class="form-group">
                          <label> The student passed web2 </label>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Is_pass_web2" value="yes" /> Yes</label>
                          </div>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Is_pass_web2" value="no"  />No</label>
                          </div>
                <span asp-validation-for="Is_pass_web2" class="text-danger"></span>
                      </div>
           
 
                     <div class="form-group">
                          <label> The student passed project management </label>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Is_pass_pr_mang" value="yes" /> Yes</label>
                          </div>
                          <div class="checkbox">
                <label> <input type="radio" asp-for="Is_pass_pr_mang" value="no"  />No</label>
                          </div>
                <span asp-validation-for="Is_pass_pr_mang" class="text-danger"></span>
                      </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
