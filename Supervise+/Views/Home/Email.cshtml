
@{
    ViewData["Title"] = "Email";
}

<h1>Email</h1>

<body>


    <form asp-action="email">
        <div class="form-group">
            <label class="control-label"> Address</label>
            <input name="address" class="form-control" /> <br />
        </div>
        <div class="form-group">
            <label for="body" class="control-label"> Subject</label>
            <input name="body" class="form-control" /> <br />
        </div>
        <div class="form-group">
            <label for="subject" class="control-label"> Body</label>
            <textarea  name="subject" rows="4" cols="50"> </textarea>


        </div>
        <input type="submit" value="Send" class="btn btn-default" />
        <p> @ViewData["message"]</p>
    </form>



    </body>
